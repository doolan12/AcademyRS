<p id="notice"><%= notice %></p>

<h1>Listing Tickets</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Status</th>
      <th>Assignee</th>
      <th>Company</th>
      <th>Course</th>
      <th>Operating system</th>
      <th>Browser</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.user_id %></td>
        <td><%= ticket.status %></td>
        <td><%= ticket.assignee_id %></td>
        <td><%= ticket.company %></td>
        <td><%= ticket.course %></td>
        <td><%= ticket.operating_system_id %></td>
        <td><%= ticket.browser_id %></td>
        <td><%= ticket.description %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

